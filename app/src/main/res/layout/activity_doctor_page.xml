<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1A44"
    android:padding="16dp"
    tools:context=".DoctorPageActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Doctor Consultation"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Connect with certified medical experts"
        android:textColor="#B0C3FF"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Doctor Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/doctorCard"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white"
            android:padding="14dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivDoctor"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/dr_one"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_white"
                android:layout_marginEnd="14dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDoctorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Evelyn Reed"
                    android:textColor="#0A1A44"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDoctorSpeciality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General Physician"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:id="@+id/tvDoctorStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="● Online"
                    android:textColor="#07C060"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Call Doctor Button -->
    <Button
        android:id="@+id/btnCallDoctor"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="Call Doctor"
        android:textColor="@android:color/white"
        android:backgroundTint="#2E5BFF"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/doctorCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Chat Button (Disabled for Now) -->
    <Button
        android:id="@+id/btnChatDoctor"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="Chat with Doctor (Coming Soon)"
        android:textColor="#B0C3FF"
        android:enabled="false"
        android:backgroundTint="#1F2A50"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnCallDoctor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Info Box -->
    <androidx.cardview.widget.CardView
        android:id="@+id/infoCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/btnChatDoctor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_white"
            android:padding="16dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="How it Works?"
                android:textColor="#0A1A44"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="• Tap 'Call Doctor' to start consultation\n• A secure Call ID will be generated\n• Doctor joins via SignSpeak Web Panel\n• Video call begins instantly"
                android:textSize="14sp"
                android:textColor="#555"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
