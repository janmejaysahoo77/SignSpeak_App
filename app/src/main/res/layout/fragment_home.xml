<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F3B"
    tools:context=".Fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_title"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="38sp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Character Image -->
        <ImageView
            android:id="@+id/characterImage"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/character"
            android:contentDescription="@string/character_image" />

        <!-- Speech to Gesture Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSpeechToGesture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/homefragmentbuttonshape"
            android:textColor="#000000"
            android:text="@string/speech_to_gesture"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Gesture to Speech Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGestureToSpeech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/homefragmentbuttonshape"
            android:textColor="#000000"
            android:text="@string/gesture_to_speech"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Learn Sign Language Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLearnSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/homefragmentbuttonshape"
            android:textColor="#000000"
            android:text="@string/learn_sign_language"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- ðŸ”” Alarm Bar -->
        <LinearLayout
            android:id="@+id/alarmBar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="#18204D"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_access_alarms_24"
                android:contentDescription="@string/alarm_icon"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/tvAlarmMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_alerts"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
