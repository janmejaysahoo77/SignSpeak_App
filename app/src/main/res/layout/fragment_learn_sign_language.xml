<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F3B"
    tools:context=".Fragment.LearnSignLanguageFragment">

    <!-- CARD 1 : LEARN SIGN LANGUAGE -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLearnSign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="52dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvLearnSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/learn_sign_language"
                android:textSize="28sp"
                android:textColor="#0B0F3B"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpenYoutube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click Here"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#0B0F3B"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                app:cornerRadius="20dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvLearnSign"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <!-- CARD 2 : TEST YOUR SIGN LANGUAGE -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTestSign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="165dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="52dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/cardLearnSign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvTestSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/testsignlanguage"
                android:textSize="28sp"
                android:textColor="#0B0F3B"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTestSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click Here"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#0B0F3B"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                app:cornerRadius="20dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvTestSign"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
