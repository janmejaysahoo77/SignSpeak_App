<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F3B"
    tools:context=".SettingActivity">

    <!-- TITLE -->
    <TextView
        android:id="@+id/tvSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- LANGUAGE SELECTION LABEL -->
    <TextView
        android:id="@+id/tvLanguageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Language"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvSettingsTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- LANGUAGE RADIO GROUP -->
    <RadioGroup
        android:id="@+id/rGroupLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvLanguageLabel"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/rbEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textColor="#FFFFFF"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/rbOdia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odia"
            android:textColor="#FFFFFF"
            android:textSize="15sp"/>

    </RadioGroup>

    <!-- CONFIRM BUTTON -->
    <Button
        android:id="@+id/btnConfirmLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:backgroundTint="#E20C0C"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/rGroupLanguage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
